<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto.Views.SearchPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Buscar" FontSize="40" TextColor="Black">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android">CraftyGirls.ttf#CraftyGirls</On>
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
            <Entry x:Name="Email" Text="{Binding Email}" HeightRequest="40"
                TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>